#include <stdio.h>
#include <stdlib.h>
#include <time.h>
int main()
{
    srand(time(NULL));
    int m[4][4], i, j, num=0, k=0;
    for(i=0; i<4; i++)
    {
        for(j=0; j<4; j++)
        {
            m[i][j]=rand()%50+1;
            printf("%i  ", m[i][j]);
        }
        printf("\n");
    }
    printf("Insira um valor:\n");
    scanf("%i", &num);
    for(i=0; i<4; i++)
    {
        for(j=0; j<4; j++)
        {
            if(num==m[i][j])
            {
                printf("\nO valor está presente na matriz de coordenada %i, %i\n\n", i, j);
                k++;
            }
        }
    }
    if(k==0)
    {
        printf("\nO valor não está presente na matriz");
    }
    return 0;
}
